<?xml version="1.0"?>
<robot name="simple_gripper" xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="palm">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.04" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.1 0.04" />
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>


  <xacro:macro name="finger" params="suffix">
   <link name="finger${suffix}">
    <visual>
      <geometry>
        <box size="0.02 0.05 0.12"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.06"/>
      <material name="fing">
        <color rgba="0.6 0.6 0.8 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.05 0.12"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.06"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
   </link>

   <link name="pad${suffix}">
    <visual>
      <geometry>
        <box size="0.006 0.04 0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
      <material name="pad">
        <color rgba="0.2 0.2 0.2 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.020 0.04 0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.02"/>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
   </link>

   <joint name="finger${suffix}_to_pad${suffix}" type="fixed">
    <parent link="finger${suffix}"/>
    <child link="pad${suffix}"/>
    <origin xyz="0.013 0 0.06" rpy="0 0.1 0"/>
   </joint>

   <!-- make the pad squishy -->
   <gazebo reference="pad${suffix}">
    <mu1 value="10.0" />
    <mu2 value="10.0" />
    <kp  value="10000000" />
   </gazebo>

  </xacro:macro>

  <!-- make two fingers -->
  <xacro:finger suffix="1" />
  <xacro:finger suffix="2" />

  <!-- fingers can slide -->

  <joint name="palm_to_finger1" type="prismatic">
    <parent link="palm"/>
    <child link="finger1"/>
    <limit effort="100.0" lower="-0.03" upper="0.045" velocity="0.05"/>
    <origin xyz="0.06 0 0.04" rpy="0 0 3.14159265"/>
  </joint>

  <joint name="palm_to_finger2" type="prismatic">
    <parent link="palm"/>
    <child link="finger2"/>
    <limit effort="100.0" lower="-0.03" upper="0.045" velocity="0.05"/>
    <origin xyz="-0.06 0 0.04"/>
  </joint>

  <transmission name="finger1_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="finger1_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="palm_to_finger1">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <transmission name="finger2_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="finger2_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="palm_to_finger2">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <!-- the grasp fix stuff, disabled by default -->
  <xacro:arg name="use_grasp_fix" default="false" />
  <xacro:if value="$(arg use_grasp_fix)"> 
    <gazebo>
      <plugin name="gazebo_grasp_fix" filename="libgazebo_grasp_fix.so">
        <arm>
           <arm_name>arm</arm_name>
           <palm_link>wrist_3_link</palm_link>
           <gripper_link>finger1</gripper_link>
           <gripper_link>finger2</gripper_link>
        </arm>
        <forces_angle_tolerance>100</forces_angle_tolerance>
        <update_rate>4</update_rate>
        <grip_count_threshold>4</grip_count_threshold>
        <max_grip_count>8</max_grip_count>
        <release_tolerance>0.01</release_tolerance>
        <disable_collisions_on_attach>false</disable_collisions_on_attach>
        <contact_topic>__default_topic__</contact_topic>
      </plugin>
    </gazebo>
  </xacro:if>

</robot>
