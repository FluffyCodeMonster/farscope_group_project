<?xml version="1.0" ?>

<launch>

  <!-- get robot desc URDF into parameter --> 
  <param name="robot_description" command="$(find xacro)/xacro $(find farscope_group_proj)/urdf/farscope_robot.urdf.xacro" />  
  
  <!-- launching gazebo (copied from ur_gazebo/ur10.launch) -->
  <arg name="paused" default="false" doc="Starts gazebo in paused mode" />
  <arg name="gui" default="true" doc="Starts gazebo gui" />
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.1" respawn="false" output="screen" />

  <!-- start robot state pub and joint state output from gazebo -->
  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>
  
  <!-- start UR10 controller -->
  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur10.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

  <rosparam command="load"
            file="$(find farscope_group_proj)/controller/gripper.yaml"
            />
  <node name="gripper_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn finger1_controller finger2_controller" respawn="false" output="screen"/>

</launch>
